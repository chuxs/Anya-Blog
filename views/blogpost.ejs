<!DOCTYPE html>
<html lang="en">

 <%- include('Partials/head.ejs')%>

 <body>
    <%- include('Partials/header.ejs') %>

    <main>
        <section id="home" class="hero">
            
            <h1><%= blogtitle %></h1>
            <p class="blog-content"><%= blogcontent %></p>

            <div class="feature-grid">

                <form action="/edit" method="POST" class="blog-content">
                   <input name="idEdit" type="hidden" value="<%= blogId %>">

                   <textarea name="editContent" placeholder="Edit your post..." class="feature-card textbox" id="contentToEdit"
                      style="visibility:hidden;"><%= blogcontent %></textarea>

                    <button type="submit" id="updateButton" style="visibility:hidden;"
                      class="cta-btn-submit">Update Post</button>

                </form>

            </div>
            
        </section>
    </main>
    <!-- External JavaScript -->
    <script src="/js/script.js"></script>
 </body>

</html>